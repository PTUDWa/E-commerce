<section class="vh-100 mt-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbootstrap.com/img/Photos/new-templates/bootstrap-login-form/draw2.svg" class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <form method="POST" action="#">
          
          <div class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">SIGN IN</div>
          <!-- Email input -->
           {{#if error}}
            <div class="form-outline mb-4">
                <div class="alert alert-warning alert-dismissible fade show"><i class="fas fa-exclamation-triangle mr-2"></i>{{error}}</div>
            </div>
          {{else}}
            {{#if message}}
            <div class="form-outline mb-4">
              <div class="alert alert-warning alert-dismissible fade show"><i class="fas fa-exclamation-triangle mr-2"></i>{{message}}</div>
            </div>
            {{/if}}
          {{/if}}
          
          {{#if (isdefined username)}}
          <div class="form-outline mb-4">
            <input type="text" id="form1Example13" class="form-control form-control-lg set--width__input" placeholder="Username" name="username" value="{{username}}"/>
            <label class="form-label" for="form1Example13"></label>
          </div>
          {{else}}
          <div class="form-outline mb-4">
            <input type="text" id="form1Example13" class="form-control form-control-lg set--width__input" placeholder="Username" name="username" />
            <label class="form-label" for="form1Example13"></label>
          </div>
          {{/if}}

          {{#if (isdefined password)}}
          <!-- Password input -->
          <div class="form-outline mb-4">
            <input type="password" id="form1Example23" class="form-control form-control-lg set--width__input" placeholder="Password" name="password" value="{{password}}"/>
            <label class="form-label" for="form1Example23"></label>
          </div>
          {{else}}
          <div class="form-outline mb-4">
            <input type="password" id="form1Example23" class="form-control form-control-lg set--width__input" placeholder="Password" name="password"/>
            <label class="form-label" for="form1Example23"></label>
          </div>
          {{/if}}
          

          

          

        <!-- Checkbox -->
        <a href="/forgot-password" class = "text-customer forgot-pw">Forgot password?</a>
         

          <!-- Submit button -->
          <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
          </div>

          <a class="btn btn-primary btn-lg btn-block" style="background-color: #3b5998" href="/google" role="button">
            <i class="fab fa-google me-2 icon"></i>Continue with Google
          </a>
          {{!-- <a class="btn btn-primary btn-lg btn-block" style="background-color: #55acee" href="#!" role="button">
            <i class="fab fa-twitter me-2 icon"></i>Continue with Twitter</a> --}}

        </form>
      </div>
    </div>
  </div>
</section>