{{#each billDetail}}
  <div class='container rounded bg-white mt-6 mb-5 details-mt'>
    <div
      class='d-flex flex-column justify-content-center align-items-center'
      id='order-heading'
    >
      <div class='text-uppercase'>
        <p>Order detail</p>
      </div>
      <div class='h4'>{{this.createdAt}}</div>
      <div class='pt-1'>
        <p>Order #{{this.id}}
          is currently<b class='text-dark'> processing</b></p>
      </div>
    </div>
    <div class='wrapper bg-white'>
      <div class='mb-100'>
        <table class='table table-borderless mb-5'>
          <thead>
            <tr>
              <th>Product Name</th>
              <th></th>
              <th>Quantily</th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
            {{#each this.items}}
              <tr>
                <td colspan='2'>{{this.title}}</td>
                <td>{{this.qty}}pc</td>
                <td>${{this.price}}</td>
              </tr>
            {{/each}}

            <tr>
              <td colspan='2'><h5 class='text-muted'><strong
                  >Total</strong></h5></td>
              <td><h5 class='text-muted'><strong
                  >{{this.totalItem}}pc</strong></h5></td>
              <td><h5 class='text-muted'><strong
                  >${{this.totalPrice}}</strong></h5></td>
            </tr>

          </tbody>
        </table>
      </div>

      <div class='row border rounded p-1 my-3'>
        <div class='col-md-6 py-3'>
          <div class='d-flex flex-column align-items start'>
            <b>Personal Information</b>
            <p class='text-justify pt-2'><strong>Username: </strong>
              {{this.username}}</p>
            <p class='text-justify'><strong>Phone number:
              </strong>{{this.phone}}</p>
            <p class='text-justify'><strong>Payment by:
              </strong>{{this.paymentType}}</p>
            {{#if this.type}}
              <p class='text-justify'><img
                  src='https://i.imgur.com/7kQEsHU.png'
                  width='30'
                />{{this.detailPayment}}</p>
            {{else}}
              <p class='text-justify'>
                <img
                  src='https://i.imgur.com/2ISgYja.png'
                  width='30'
                />{{this.detailPayment}}</p>
            {{/if}}

          </div>
        </div>
        <div class='col-md-6 py-3'>
          <div class='d-flex flex-column align-items start'>
            <b>Shipping Address</b>
            <p class='text-justify pt-2'>{{this.address}}</p>
          </div>
        </div>
      </div>
      <div class='pl-3 font-weight-bold'>Tracking</div>
      <div class='track'>
        {{#switch this.status}}
          {{#case 'ordered'}}
            <div class='step'>
              <span class='icon'> <i class='fa fa-check'></i> </span>
              <span class='text'>Order confirmed</span>
            </div>
            <div class='step'>
              <span class='icon'> <i class='fa fa-user'></i> </span>
              <span class='text'> Picked by courier</span>
            </div>
            <div class='step'>
              <span class='icon'> <i class='fa fa-truck'></i> </span>
              <span class='text'> On the way </span>
            </div>
            <div class='step'>
              <span class='icon'> <i class='fa fa-box'></i> </span>
              <span class='text'>Ready for pickup</span>
            </div>
          {{/case}}
          {{#case 'order_confirmed'}}
            <div class='step active'>
              <span class='icon'> <i class='fa fa-check'></i> </span>
              <span class='text'>Order confirmed</span>
            </div>
            <div class='step'>
              <span class='icon'> <i class='fa fa-user'></i> </span>
              <span class='text'> Picked by courier</span>
            </div>
            <div class='step'>
              <span class='icon'> <i class='fa fa-truck'></i> </span>
              <span class='text'> On the way </span>
            </div>
            <div class='step'>
              <span class='icon'> <i class='fa fa-box'></i> </span>
              <span class='text'>Ready for pickup</span>
            </div>
          {{/case}}
          {{#case 'picked_by_courier'}}
            <div class='step active'>
              <span class='icon'> <i class='fa fa-check'></i> </span>
              <span class='text'>Order confirmed</span>
            </div>
            <div class='step active'>
              <span class='icon'> <i class='fa fa-user'></i> </span>
              <span class='text'> Picked by courier</span>
            </div>
            <div class='step'>
              <span class='icon'> <i class='fa fa-truck'></i> </span>
              <span class='text'> On the way </span>
            </div>
            <div class='step'>
              <span class='icon'> <i class='fa fa-box'></i> </span>
              <span class='text'>Ready for pickup</span>
            </div>
          {{/case}}
          {{#case 'on_the_way'}}
            <div class='step active'>
              <span class='icon'> <i class='fa fa-check'></i> </span>
              <span class='text'>Order confirmed</span>
            </div>
            <div class='step active'>
              <span class='icon'> <i class='fa fa-user'></i> </span>
              <span class='text'> Picked by courier</span>
            </div>
            <div class='step active'>
              <span class='icon'> <i class='fa fa-truck'></i> </span>
              <span class='text'> On the way </span>
            </div>
            <div class='step'>
              <span class='icon'> <i class='fa fa-box'></i> </span>
              <span class='text'>Ready for pickup</span>
            </div>
          {{/case}}
          {{#case 'ready_for_pickup'}}
            <div class='step active'>
              <span class='icon'> <i class='fa fa-check'></i> </span>
              <span class='text'>Order confirmed</span>
            </div>
            <div class='step active'>
              <span class='icon'> <i class='fa fa-user'></i> </span>
              <span class='text'> Picked by courier</span>
            </div>
            <div class='step active'>
              <span class='icon'> <i class='fa fa-truck'></i> </span>
              <span class='text'> On the way </span>
            </div>
            <div class='step active'>
              <span class='icon'> <i class='fa fa-box'></i> </span>
              <span class='text'>Ready for pickup</span>
            </div>
          {{/case}}
        {{/switch}}

      </div>
    </div>
  </div>
{{/each}}