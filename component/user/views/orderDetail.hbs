
{{#each billDetail}}
<div class="container rounded bg-white mt-6 mb-5 details-mt">
    <div class="d-flex flex-column justify-content-center align-items-center" id="order-heading">
        <div class="text-uppercase">
            <p>Order detail</p>
        </div>
        <div class="h4">{{this.createdAt}}</div>
        <div class="pt-1">
            <p>Order #{{this.id}} is currently<b class="text-dark"> processing</b></p>
        </div>
    </div>
    <div class="wrapper bg-white ">
        <div class="mb-100">
            <table class="table table-borderless mb-5">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th></th>
                        <th>Quantily</th>						
                        <th>Total</th>						
                    </tr>
                    {{!-- <tr class="text-uppercase text-muted">
                        <th scope="col">product</th>
                        <th scope="col" class="text-right">price</th>
                    </tr> --}}
                </thead>
                <tbody>
                    {{#each this.items}}
                        <tr>
                            <td colspan="2">{{this.title}}</td>
                            <td>{{this.qty}}px</td>                        
                            <td>${{this.price}}</td>
                        </tr>
                    {{/each}}

                    <tr>
                        <td colspan="2"><h5 class="text-muted"><strong>Total</strong></h5></td>
                        <td><h5 class="text-muted"><strong>{{this.totalItem}}px</strong></h5></td>                        
                        <td><h5 class="text-muted"><strong>{{this.totalPrice}}px</strong></h5></td>
                    </tr>
                    
                </tbody>
            </table>
        </div>
